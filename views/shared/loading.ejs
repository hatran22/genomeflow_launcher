<div id="loading">
  <transition name="fade">
    <div v-if="loadingActive" class="position-fixed w-100 h-100 bg-white"
    style="top: 0px; bottom:0px; left: 0px; right: 0px; z-index: 999;"></div>
  </transition>
</div>

<style>
  .fade-enter-active, .fade-leave-active {
    transition: all .3s ease-in-out;
  }

  .fade-enter, .fade-leave-to {
    opacity: 0 !important;
  }
</style>

<script>
  new Vue({
    el: "#loading",
    data: {
      loadingActive: true,
    },
    mounted() {
      $(document).ready(() => {
        this.loadingActive = false;
      })
    }
  })
</script>